aarch64-slave:
  topology: aarch64-slave.yml
  layout: jenkins-slave.yml
  hooks:
    postup:
      - type: ansible
        name: config
        actions:
          - playbook: config.yml
            extra_vars: {ansible_ssh_private_key_file: '~/.ssh/id_rsa', ansible_ssh_common_args='-o StrictHostKeyChecking=no'}

