jenkins-slave-aarch64:
  topology: jenkins-slave-aarch64.yml
  layout: jenkins-slave.yml
  hooks:
    postup:
      - type: ansible
        name: init
        actions:
          - playbook: init.yml
            extra_vars: {"ansible_ssh_private_key_file": "~/.ssh/id_rsa"}

